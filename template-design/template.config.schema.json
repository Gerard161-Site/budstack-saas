{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "BudStack Template Configuration",
  "description": "Configuration file for BudStack templates v2.0",
  "type": "object",
  "required": [
    "id",
    "name",
    "version",
    "author",
    "description",
    "compatibility"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique template identifier (kebab-case)",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "examples": ["modern-minimal", "video-hero", "editorial-style"]
    },
    "name": {
      "type": "string",
      "description": "Display name for the template",
      "minLength": 3,
      "maxLength": 50
    },
    "version": {
      "type": "string",
      "description": "Semantic version number",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0", "2.1.3"]
    },
    "author": {
      "type": "string",
      "description": "Template creator name or organization"
    },
    "description": {
      "type": "string",
      "description": "Brief template description",
      "minLength": 20,
      "maxLength": 200
    },
    "preview_image": {
      "type": "string",
      "description": "URL or path to template preview image",
      "format": "uri"
    },
    "tags": {
      "type": "array",
      "description": "Descriptive tags for template categorization",
      "items": {
        "type": "string"
      },
      "minItems": 1,
      "maxItems": 10,
      "examples": [["modern", "minimal", "video", "parallax"]]
    },
    "category": {
      "type": "string",
      "description": "Primary template category",
      "enum": [
        "modern",
        "classic",
        "editorial",
        "ecommerce",
        "medical",
        "wellness",
        "minimal",
        "bold"
      ]
    },
    "created_at": {
      "type": "string",
      "description": "Template creation date (ISO 8601)",
      "format": "date"
    },
    "updated_at": {
      "type": "string",
      "description": "Last update date (ISO 8601)",
      "format": "date"
    },
    "compatibility": {
      "type": "object",
      "required": ["platform_version"],
      "properties": {
        "platform_version": {
          "type": "string",
          "description": "Minimum BudStack platform version",
          "pattern": "^\\d+\\.\\d+\\+?$",
          "examples": ["2.0+", "1.5+"]
        },
        "nextjs_version": {
          "type": "string",
          "description": "Compatible Next.js version",
          "examples": ["14.x", "13.x"]
        },
        "react_version": {
          "type": "string",
          "description": "Compatible React version",
          "examples": ["18.x", "17.x"]
        },
        "requires_features": {
          "type": "array",
          "description": "Required platform features",
          "items": {
            "type": "string",
            "enum": [
              "hero-video",
              "hero-image",
              "consultation-booking",
              "product-catalog",
              "blog",
              "multi-language"
            ]
          }
        }
      }
    },
    "features": {
      "type": "object",
      "description": "Template capabilities",
      "properties": {
        "hero_video": {
          "type": "boolean",
          "description": "Supports video hero backgrounds"
        },
        "parallax_scrolling": {
          "type": "boolean",
          "description": "Includes parallax scroll effects"
        },
        "dark_mode": {
          "type": "boolean",
          "description": "Supports dark mode theming"
        },
        "animations": {
          "type": "boolean",
          "description": "Includes scroll animations"
        },
        "multi_language": {
          "type": "boolean",
          "description": "Supports multiple languages"
        }
      }
    },
    "performance": {
      "type": "object",
      "description": "Performance metrics",
      "properties": {
        "lighthouse_score": {
          "type": "number",
          "description": "Google Lighthouse performance score",
          "minimum": 0,
          "maximum": 100
        },
        "bundle_size_kb": {
          "type": "number",
          "description": "Estimated bundle size in kilobytes",
          "minimum": 0
        },
        "load_time_ms": {
          "type": "number",
          "description": "Estimated page load time in milliseconds",
          "minimum": 0
        }
      }
    },
    "accessibility": {
      "type": "object",
      "properties": {
        "wcag_level": {
          "type": "string",
          "description": "WCAG compliance level",
          "enum": ["A", "AA", "AAA"]
        },
        "screen_reader_tested": {
          "type": "boolean"
        },
        "keyboard_navigable": {
          "type": "boolean"
        }
      }
    },
    "pricing": {
      "type": "object",
      "description": "Template pricing (if applicable)",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["free", "premium", "enterprise"]
        },
        "price_usd": {
          "type": "number",
          "minimum": 0
        }
      }
    },
    "support": {
      "type": "object",
      "description": "Support and documentation links",
      "properties": {
        "documentation_url": {
          "type": "string",
          "format": "uri"
        },
        "support_email": {
          "type": "string",
          "format": "email"
        },
        "demo_url": {
          "type": "string",
          "format": "uri"
        },
        "repository_url": {
          "type": "string",
          "format": "uri"
        }
      }
    }
  }
}
