# ============================================
# BudStack Production Environment Variables
# ============================================

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=budstack
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=budstack_db
DATABASE_URL=postgresql://budstack:CHANGE_ME_STRONG_PASSWORD_HERE@pgbouncer:5432/budstack_db?pgbouncer=true

# ============================================
# NextAuth Configuration
# ============================================
NEXTAUTH_URL=https://budstack.to
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=CHANGE_ME_RANDOM_SECRET_HERE

# ============================================
# Dr. Green API Integration
# ============================================
DRGREEN_API_URL=https://api.drgreen.com
DRGREEN_API_KEY=your_drgreen_api_key
DRGREEN_SECRET_KEY=your_drgreen_secret_key

# ============================================
# AWS S3 Configuration
# ============================================
AWS_BUCKET_NAME=budstack-uploads
AWS_FOLDER_PREFIX=development/
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================
# Email Configuration
# ============================================
EMAIL_SERVER=smtp://user:password@smtp.sendgrid.net:587
EMAIL_FROM=noreply@your-domain.com

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://redis:6379

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
PORT=3000
